{{#>admin}}
{{#*inline "table"}}
{{#with p}}
<form method="post" action="/admin/{{productID}}/update" class="col-10 mx-auto"
    enctype="multipart/form-data">
    <div class="row mb-4">
        {{!--product Image--}}
        <div class="col">
            <div class="form-outline">
                <label class="form-label" for="customFile">Product Image</label>
                <input type="file" name="image" class="form-control"
                    id="customFile" value="{{productImg}}" required/>
            </div>
        </div>
        {{!--title--}}
        <div class="col">
            <div class="form-outline">
                <input type="text" id="form6Example2" name="title"
                    value="{{productTile}}" class="form-control"
                    required />
                <label class="form-label" for="form6Example2">Product Title</label>
            </div>
        </div>
    </div>

    <!-- subtitle -->
    <div class="form-outline mb-4">
        <textarea class="form-control" id="form6Example7" rows="4" name="subtitle">{{productSubTitle}}</textarea>
        <label class="form-label" for="form6Example7">Product Description</label>
    </div>


    <!-- price -->
    <div class="form-outline mb-4">
        <input type="number" id="form6Example4" value="{{ProductPrice}}"
            class="form-control" name="price" required />
        <label class="form-label" for="form6Example4">Product Price</label>
    </div>
    <!-- Submit button -->
    <button type="submit" class="btn btn-primary btn-lg mb-4"
        style="background-color: #4A148C; color:#fff">Edit</button>
</form>
{{/with}}

{{/inline}}


{{/admin}}