{{>default}}

<div class="container mt-5 mb-3 mb-lg-5">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center text-dark fw-bold">
                {{cart}}
            </h1>
            <div class="card mb-3 shadow-4">
                <div class="row g-0">
                    <div class="col-12">
                        <h4 class="text-dark text-muted regular">
                            Products In Carts
                            <table class="table table-bordered table-striped
                                text-center">
                                <thead>
                                    <tr>
                                        <th scope="col">ID</th>
                                        <th scope="col">Name</th>
                                        <th scope="col">Price</th>
                                        <th scope="col">Quantity</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each products}}
                                    <tr>
                                        <td>{{id}}</td>
                                        <td>{{title}}</td>
                                        <td>${{price}}</td>
                                        <td>{{lookup ../session.products id}}</td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                            <div class="float-end float-sm-dev">
                                <button type="button" class="btn btn-dark">Total To
                                Pay <b style="color:#E6C744;">${{total}}</b></button>
                                {{#if products}}
                            <a href="/cart/purchase" class="btn btn-success">Purchase</a>
                            <a href="/cart/delete" class="btn btn-danger">Remove all products</a>
                            {{/if}}
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>


    {{>footer}}